# .env

# --- Environment ---
RAILS_ENV=development

# --- Puma HTTPS binding ---
PORT=3001
PUMA_DEV_SSL=true

# --- Rails threading / defaults ---
RAILS_MAX_THREADS=8

# --- Local Postgres (Postgres.app on your Mac) ---
PGUSER=drruby
PGHOST=/tmp
PGPORT=5432

# --- Dev HTTPS assumptions for host (optional, app-level) ---
APP_HOST=localhost
APP_PROTOCOL=https
APP_PORT=3001


